#makefile config.

COMMON_OBJECTS	=

CPU		= msp430g2553

CFLAGS		= -mmcu=${CPU} -I../h

LDFLAGS		= -L/opt/ti/msp430_gcc/include

#switch the compiler (for the internal make rules)
CC		= msp430-elf-gcc
AS		= msp430-elf-as

all: main.elf

#additional rules for files
main.elf: ${COMMON_OBJECTS} buzzer.o p1_Interrupt_Handler.o switches.o wdInterruptHandler.o stateMachines.o led.o blinkMain.o ./lib/libTimer.a
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $^

load: main.elf
	msp430loader.sh main.elf

clean:
	rm -f *.o *.elf *.~ *.c~ *.h~
